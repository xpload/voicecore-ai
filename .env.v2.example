# VoiceCore AI 2.0 - Environment Configuration
# Copy this file to .env and configure with your actual values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=postgresql://voicecore:voicecore_secure_password@postgres:5432/voicecore_v2
POSTGRES_DB=voicecore_v2
POSTGRES_USER=voicecore
POSTGRES_PASSWORD=voicecore_secure_password

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# ============================================================================
# OPENAI / AI CONFIGURATION
# ============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# ============================================================================
# TWILIO CONFIGURATION (for voice calls)
# ============================================================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# ============================================================================
# STRIPE CONFIGURATION (for billing)
# ============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ============================================================================
# JWT / AUTHENTICATION
# ============================================================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================================================
# EXTERNAL INTEGRATIONS
# ============================================================================

# Salesforce
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=
SALESFORCE_REDIRECT_URI=

# HubSpot
HUBSPOT_API_KEY=
HUBSPOT_CLIENT_ID=
HUBSPOT_CLIENT_SECRET=

# Slack
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=

# Microsoft Teams
TEAMS_APP_ID=
TEAMS_APP_PASSWORD=

# Google Workspace
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# Zapier
ZAPIER_WEBHOOK_URL=

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true
ENABLE_MFA=true
SESSION_TIMEOUT_MINUTES=30

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
LOG_LEVEL=INFO
SENTRY_DSN=
DATADOG_API_KEY=

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_WEBRTC=true
ENABLE_VIDEO_CALLS=true
ENABLE_SCREEN_SHARING=true
ENABLE_REAL_TIME_TRANSLATION=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_VOICE_CLONING=false

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================
MAX_CONCURRENT_CALLS=10000
API_RATE_LIMIT_PER_MINUTE=1000
CACHE_TTL_SECONDS=3600

# ============================================================================
# DEPLOYMENT CONFIGURATION
# ============================================================================
ENVIRONMENT=development
DEBUG=true
API_VERSION=2.0.0

# ============================================================================
# CDN & STORAGE
# ============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@voicecore.ai

# ============================================================================
# WEBHOOK CONFIGURATION
# ============================================================================
WEBHOOK_RETRY_ATTEMPTS=5
WEBHOOK_RETRY_DELAY_SECONDS=60
WEBHOOK_TIMEOUT_SECONDS=30

# ============================================================================
# COMPLIANCE & PRIVACY
# ============================================================================
ENABLE_GDPR_MODE=true
ENABLE_HIPAA_MODE=false
DATA_RETENTION_DAYS=365
ENABLE_AUDIT_LOGGING=true

# ============================================================================
# KUBERNETES / CLOUD CONFIGURATION
# ============================================================================
KUBERNETES_NAMESPACE=voicecore-v2
ENABLE_AUTO_SCALING=true
MIN_REPLICAS=2
MAX_REPLICAS=10
TARGET_CPU_UTILIZATION=70

# ============================================================================
# ANALYTICS & METRICS
# ============================================================================
ENABLE_ANALYTICS=true
ANALYTICS_SAMPLING_RATE=1.0
METRICS_EXPORT_INTERVAL_SECONDS=60
